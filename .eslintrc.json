{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["standard", "plugin:vue/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "vue/max-attributes-per-line": ["error", {
            "singleline": 3,
            "multiline": {
                "allowFirstLine": true
            }
        }]
    }
}
